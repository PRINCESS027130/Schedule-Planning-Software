@model IEnumerable<TimeTableManagement.Models.TEACHER_TBL>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("Create", "TEACHER_TBL")" class="glyphicon glyphicon-pencil">Create New</a>
</p>
<div class="table-agile-info">
    <table class="table">
        <tr>
            <th>
               DEPARTMENT NAME
            </th>
            <th>
                TEACHER NAME
            </th>
            <th>
                TEACHER EMAIL
            </th>
            <th>
               TEACHER PASSWORD
            </th>
            <th>
              TEACHER PHNO
            </th>
            <th>
                TEACHER ADDRESS
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.DEPARTMENT_TBL.DEPARTMENT_NAME
                </td>
                <td>
                    @item.TEACHER_NAME
                </td>
                <td>
                    @item.TEACHER_EMAIL
                </td>
                <td>
                    @item.TEACHER_PASSWORD
                </td>
                <td>
                    @item.TEACHER_PHNO
                </td>
                <td>
                    @item.TEACHER_ADDRESS
                </td>
                <td>
                    <a href="@Url.Action("Edit", "TEACHER_TBL", new { id=item.TEACHER_ID })" class="glyphicon glyphicon-edit"></a> |
                    <a href="@Url.Action("Details", "TEACHER_TBL", new { id=item.TEACHER_ID })" class="glyphicon glyphicon-book"></a>  |
                    <a href="@Url.Action("Delete", "TEACHER_TBL", new { id=item.TEACHER_ID })" class="glyphicon glyphicon-trash"></a>
                </td>
            </tr>
        }

    </table>
